<UserControl x:Class="COLORPICKER"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Canvas Name="Canvas1" Background="White">
            <Rectangle Name="saturationBar" Fill="#64C8C8C8"></Rectangle>
            <Rectangle Name="brightnessBar" Fill="#64C8C8C8"></Rectangle>
        </Canvas>
        <Label Name="COLORLABEL" Content="TEST" Foreground="#64C8C8C8" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="30" Panel.ZIndex="1" IsHitTestVisible="False"></Label>
    </Grid>
</UserControl>
