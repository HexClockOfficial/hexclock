    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="Nexa">
            <Setter Property="TextElement.FontFamily" 
            Value="pack://application:,,,/Resources/#Nexa Bold" />
        </Style>
    </Application.Resources>
</Application>
